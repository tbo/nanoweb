{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "types": ["node", "jest"],
    "lib": ["esnext"],
    "rootDir": "./src/",
    "outDir": "./dist/esm",
    "declarationDir": "./dist/types",
    "jsx": "react-jsx",
    "jsxImportSource": "@nanoweb/jsx",
    "paths": {
      "@nanoweb/jsx": ["./src/jsx-runtime"],
      "@nanoweb/jsx/jsx-runtime": ["./src/jsx-runtime"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
